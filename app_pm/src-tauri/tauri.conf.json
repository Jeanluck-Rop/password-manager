{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "app_pm",
  "version": "0.1.0",
  "identifier": "com.app-pm.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Password Manager",
        "width": 1200,
        "height": 1000
      }
    ],
    "security": {
      "capabilities": [
	"default"
      ],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
